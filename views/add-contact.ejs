<% include partials/header.ejs %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-contact-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="name" id="name" placeholder="Nombres" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="surname" id="surname" placeholder="Apellidos" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="email" class="form-control" name="email" id="email" placeholder="Correo" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="date" class="form-control" name="birthday" id="birthday" placeholder="Fecha de nacimiento" required>
                </div>
                <div class="col-md-12">
                    <label for="contact-img"><b>Imagen de contacto</b></label><br>
                    <input type="file" name="image" id="contact-img" class="" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Agregar contacto</button>
        </form>
    </div>
</div>
</body>
</html>
