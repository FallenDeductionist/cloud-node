<% include partials/header.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (contact) { %>
        <form class="add-contact-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="name">Nombres</label>
                    <input type="text" class="form-control" name="name" id="name" value="<%= contact.name %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="surname">Apellidos</label>
                    <input type="text" class="form-control" name="surname" id="surname" value="<%= contact.surname %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="email">Correo</label>
                    <input type="email" class="form-control" name="email" id="email" value="<%= contact.email %>" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="birthday">Fecha de nacimiento</label>
                    <input type="birthday" class="form-control" name="birthday" id="birthday" placeholder="Fecha de nacimiento" value="<%= contact.birthday %>" required>
                </div>
            </div>
            <button type="submit" class="btn btn-success float-right">Actualizar Contacto</button>
        </form>
    <% } else { %>
        <p class="text-center">Contacto no encontrado. Click <a href="/add">aqu√≠</a> para agregar contacto.</p>
    <% } %>
</div>
</div>
</body>
</html>
